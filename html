    <!-- Аудио скрыто, но автоматически воспроизводится -->
    <audio id="myAudio" src="https://files.catbox.moe/ukxffp.mp3" loop autoplay></audio>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const audio = document.getElementById('myAudio');
            
            // Принудительное воспроизведение при взаимодействии пользователя
            function playAudio() {
                audio.play().then(() => {
                    console.log('Музыка воспроизводится');
                }).catch(error => {
                    console.log('Ошибка воспроизведения:', error);
                });
            }
            
            // Пытаемся воспроизвести сразу
            playAudio();
            
            // Также воспроизводим при любом клике по странице
            document.body.addEventListener('click', function() {
                playAudio();
            });
            
            // И при любом движении мыши
            document.body.addEventListener('mousemove', function() {
                playAudio();
            });
        });
    </script>

    <div class="troywell-cad"></div>
    <div class="troywell-avid"></div>
</body>
